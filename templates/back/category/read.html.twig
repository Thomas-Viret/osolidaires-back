{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block category %}active{% endblock %}

{% block body %}
<h1>{{ category.name }}</h1>

<h2>Propositions</h2>
<table class="table table-hover table-striped">
  
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titre</th>
      <th scope="col">Contenu</th>
      <th scope="col">Bénévole</th>
      <th scope="col">Département</th>
    </tr>
  </thead>
  <tbody>
     
    {% for proposition in propositions %}    
    <tr>
      <th scope="row">{{ proposition.id }}</th>
      <td><a href="{{ path('back_proposition_read', {id: proposition.id} )}}">{{ proposition.title }}</a></td>
      <td>{{ proposition.content }}</td>
      <td><a href="{{ path('back_volunteer_read', {id: proposition.user.id}) }}">{{ proposition.user.lastname }} {{ proposition.user.firstname }}</a></td>
      <td>{{ proposition.user.department }}</td>
    </tr>
    {% endfor %}

  </tbody>
</table>




<h2>Demandes</h2>

<table class="table table-hover table-striped">
  
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titre</th>
      <th scope="col">Contenu</th>
      <th scope="col">Bénéficiaire</th>
      <th scope="col">Département</th>
    </tr>
  </thead>
  <tbody>
     
    {% for request in requests %}
    <tr>
      <th scope="row">{{ request.id }}</th>
      <td><a href="{{ path('back_request_read', {id: request.id}) }}">{{ request.title }}</a></td>
      <td>{{ request.content }}</td>
      <td><a href="{{ path('back_beneficiary_read', {id: request.user.id}) }}">{{ request.user.lastname }} {{ request.user.firstname }}</a></td>
      <td>{{ request.user.department }}</td>
    </tr>
    {% endfor %}

  </tbody>
</table>


<a class="btn btn-sm btn-success" href="{{ path('back_category_browse') }}">retour</a>




{% endblock %}