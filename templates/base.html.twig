<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('style.css') }}">
         {# Icône de favoris/onglet #}
        <link rel="icon" type="image/x-icon" href="{{ asset('logo2.svg') }}" />
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-light mb-5"  style="background-color: #75B2C8;">
            <a class="navbar-brand" href="{{ path('back_admin_browse') }}"><img src="{{ asset('logo2.svg') }}" class="img-fluid" width = "70px"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                <li class="nav-item {% block admin %}{% endblock %}">
                    <a class="nav-link" href="{{ path('back_admin_browse') }}">Administrateurs</a>
                </li>
                <li class="nav-item {% block volunteer %}{% endblock %}">
                    <a class="nav-link" href="{{ path('back_volunteer_browse') }}">Bénévoles</a>
                </li>
                <li class="nav-item {% block beneficiary %}{% endblock %}">
                    <a class="nav-link" href="{{ path('back_beneficiary_browse') }}">Bénéficiaires</a>
                </li>
                <li class="nav-item {% block proposition %}{% endblock %}">
                    <a class="nav-link" href="{{ path('back_proposition_browse') }}">Propositions</a>
                </li>
                <li class="nav-item {% block request %}{% endblock %}">
                    <a class="nav-link" href="{{ path('back_request_browse') }}">Demandes</a>
                </li>
                <li class="nav-item {% block category %}{% endblock %}">
                    <a class="nav-link" href="{{ path('back_category_browse') }}">Catégories</a>
                </li>
                <li class="nav-item {% block department %}{% endblock %}">
                    <a class="nav-link" href="{{ path('back_department_browse') }}">Départements</a>
                    <li class="nav-item">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger my-2 my-sm-0">Déconnexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-outline-success my-2 my-sm-0">Connexion</a>
                    {% endif %}           
                    </li>
                </li>
                </ul>
            </div>
        </nav>
        
        {# Background theme en JS #}
        {# <div>
        <a class="container-theme" href="#"><img src="{{ asset('lightbulb.png')}}" width = "70px"></a>
        </div> #}


         <div class="container">
        {% block body %}
        {% endblock %}
        </div>

        {# <script src="{{ asset('app.js') }}"></script> #}
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
    </body>
</html>
